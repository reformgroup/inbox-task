<%= f.fields_for :team_users, team_users, child_index: child_index do |team_user_f| %>
  <%= nested_for(team_user_f, destroy: true) do %>
    <%= link_to user_path(team_user_f.object.user) do %>
      <%= image_tag team_user_f.object.user.avatar.url(:medium), class: 'avatar avatar-medium' %>
    <% end %>
    <%= link_to team_user_f.object.user.name, user_path(team_user_f.object.user) %>
    <%= team_user_f.hidden_field :user_id %>
  <% end %>
<% end %>
