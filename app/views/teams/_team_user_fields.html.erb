<%= f.fields_for :team_users, team_users, child_index: child_index do |team_user_f| %>
  <%= nested_for(team_user_f, destroy: true, class: 'd-flex align-items-center mb-2') do %>
    <%= link_to_user_avatar team_user_f.object.user, class: 'mr-2 d-inline-block' %>
    <%= link_to_user team_user_f.object.user %>
    <%= team_user_f.hidden_field :user_id %>
  <% end %>
<% end %>