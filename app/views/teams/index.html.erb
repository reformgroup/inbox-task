<% provide :title, t('.title') %>

<h6 class='text-muted'><%= t 'activerecord.models.team.name' %></h6>
<h2 class="d-inline"><%= t '.title' %></h2>
<div class='pull-right'>
  <%= link_to t('.add_team_link'), new_team_path, class: 'btn btn-outline-primary' %>
</div>
      
<hr class='m-y-1'>
<div class='row m-b-1'>
  <div class='<%= column_class %> search'>
    <%= search_tag users_path, id: 'team-search', class: 'search search-grey' %>
  </div><!-- /.col -->
</div><!-- /.row -->
<div class='row m-b-3'>
  <div class='<%= column_class %>'>
    <%= link_sort_tag(:sort, main_class: 'default-link-style', selected_in_title: true) do %>
      <%= option_for_sort(:name, t('.sort_by_name'), default: true) %>
      <%= option_for_sort(:created_at, t('.sort_by_created_at')) %>
    <% end %>
  </div><!-- /.col -->
</div><!-- /.row -->

<%= arranged_tree(@teams.arrange(order: :created_at), collapse: true, caret_class: 'text-muted fa-lg m-l-1') do |item, options| %>
  <%= render 'item', item: item, options: options %>
<% end %>

 <!-- nested_teams(@teams.arrange(order: :created_at))  -->
<div class='row m-t-2'>
  <div class='<%= column_class %>'>
    <div class='pagination-block'>
      <%= will_paginate @teams, inner_window: 2, outer_window: 1 %>
      <div class='pagination-info text-muted'>
        <small><%= page_entries_info @teams, model: Team, html: false %></small>
      </div><!-- /.pagination-info -->
    </div><!-- /.pagination-block -->
  </div><!-- /.col -->
</div><!-- /.row -->