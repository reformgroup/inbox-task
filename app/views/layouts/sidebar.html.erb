<!DOCTYPE html>
<html>
<head>
  <title><%= full_title yield(:title) %></title>
  <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true, cache: true %>
  <%= csrf_meta_tags %>
  <%= render 'layouts/shim' %>
  <meta name="viewport" content="width=device-width, shrink-to-fit=no, initial-scale=1">
</head>
<body>
  <div id='wrapper'>
    <%= render 'layouts/sidebar_menu' %>
    <div id='page-content-wrapper'>
      <%= render 'layouts/sidebar_header' %>
      <div id='sidebar-content'>
        <div class='container'>
          <%= render 'layouts/flash' %>
          <div class='d-flex justify-content-end'>
            <div class='mr-auto text-truncate'>
              <h2><%= yield :title %></h2>
              <h6 class='text-muted'><%= yield :subtitle %></h6>
            </div>
            <div class='ml-3 pull-right'>
              <%= yield :control %>
            </div>
          </div>
          <hr class='mb-5'>
          <%= yield %>
          <%= render 'layouts/debug' %>
        </div><!-- /.container -->
      </div><!-- /.sidebar-content -->
    </div><!-- /#page-content-wrapper -->
  </div><!-- /#wrapper -->
</body>
</html>