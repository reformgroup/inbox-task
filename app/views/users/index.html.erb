<% provide :title, t('.title') %>
<% provide :subtitle, t('activerecord.models.user.name') %>
<% provide :control, link_to(t('.add_user_link'), new_user_path, class: 'btn btn-outline-primary') %>

<!-- TODO: move code to main_search.html.erb -->

<% if false %>

<div class='row mb-3'>
  <div class='<%= column_class %> search'>
    <%= search_tag users_path, id: 'users-search', class: 'search search-grey' %>
  </div><!-- /.col -->
</div><!-- /.row -->
<div class='row mb-5'>
  <div class='<%= column_class %>'>
    <%= link_sort_tag(:sort, main_class: 'default-link-style', selected_in_title: true) do %>
      <%= option_for_sort(:last_name, t('.sort_by_name'), default: true) %>
      <%= option_for_sort(:created_at, t('.sort_by_created_at')) %>
    <% end %>
  </div><!-- /.col -->
</div><!-- /.row -->

<% end %>

<% @users.each do |user| %>
  <%= render 'item', item: user %>
<% end %>

<%= render 'pagination', collection: @users, model: User %>